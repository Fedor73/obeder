.page-header
  %h1= t('.title')
= simple_form_for @session, url: session_path, html: { class: 'form-horizontal' } do |f|
  .row
    .col-md-5
      = f.input :email
      = f.input :password
      .form-group
        .col-sm-offset-3.col-sm-9
          = f.button :submit, t('.login'), class: 'btn btn-primary'
          = link_to t('.have_you_forgotten_passowrd'), edit_remind_password_path
