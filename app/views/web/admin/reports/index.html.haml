.row
  .col-md-3
    = link_to admin_reports_path(previous_report_params(@report_month, @report_year)) do
      %h2.glyphicon.glyphicon-chevron-left
  .col-md-6
    %h1.text-center
      = report_header(t("months_from_digits.#{@report_month}"), @report_year)
  .col-md-3
    .text-right
      = link_to admin_reports_path(next_report_params(@report_month, @report_year)) do
        %h2.glyphicon.glyphicon-chevron-right

%table.table.table-bordered
  %tr.text-center
    %td
      = t('.name_column_title')
    - dates_in_month = dates_in_month(@beginning_of_month)
    - dates_in_month.each do |date|
      %td{ class: cell_color_class(date) }
        = date.day
    %td âˆ‘
  - @users.each_with_index do |user, i|
    %tr.text-center
      %td
        #{i + 1}.
        = user.name
      - total_by_user = 0
      - dates_in_month.each do |date|
        %td{ class: cell_color_class(date) }
          - user_menu = @user_menus.where(menu: Menu.where(date: date)).find_by(user: user)
          - if user_menu.present?
            - total_by_user += 1
            = 1
      %td
        = total_by_user
%p.text-right
  = t('.total')
  = @user_menus.size
