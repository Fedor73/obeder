.row
  .col-md-3
    = link_to admin_monthly_reports_path(date: previous_report_params(@date)) do
      %h2.glyphicon.glyphicon-chevron-left
  .col-md-6
    %h1.text-center
      = report_header(@date)
  .col-md-3
    .text-right
      = link_to admin_monthly_reports_path(date: next_report_params(@date)) do
        %h2.glyphicon.glyphicon-chevron-right

%br

.text-right
  %a.btn.btn-default{ href: export_admin_monthly_reports_path(date: @date) }
    %span
      = t('.export_to_excel')

%br

%table.table.table-bordered
  - dates = dates_in_month(@date)
  %tr.text-center
    %td
      = t('.name_column_title')
    - dates.each do |date|
      %td{ class: cell_color_class(date) }
        = date.day
    %td
      = t('.sum')
  - @users.each_with_index do |user, i|
    %tr.text-center
      %td
        #{i + 1}.
        = user.name
      - total_by_user = 0
      - dates.each do |date|
        %td{ class: cell_color_class(date) }
          - if user_ate?(user.id, date, @user_menus)
            - total_by_user += 1
            = 1
      %td
        = total_by_user
%p.text-right
  = t('.total')
  = @user_menus.size
