.page-header
  %h1
    = t('.title')
= simple_form_for @user_type, url: remind_password_path, method: :put, html: { class: 'form-horizontal' } do |f|
  .row
    .col-md-5
      = f.input :email
      .form-group
        .col-sm-offset-3.col-sm-9
          = f.button :submit, t('.reset_password'), class: 'btn btn-primary'
